<h1><%= @post.title %></h1>
<% @post.categories.each do |c| %>
  <%= c.name %><br/>
<% end %>
<p><%= @post.content %></p>
<h2><%= pluralize(@post.comments_count, 'Comment') %></h2>
<% @post.comments.each do |c| %>
  <%= c.username %> says: <%= c.content %><br/>
<% end %>
<h2><%= pluralize(@post.unique_users_count, 'User') %> Commented</h2>
<% @post.unique_users.each do |u| %>
  <%= u.username %><br/>
<% end %>
<h2>New Comment?</h2>
<%= form_for @post do |f| %>
  <%= f.fields_for :comments, @post.comments.build do |comments_fields| %>
    <%= comments_fields.collection_select :user_id, User.all, :id, :username, {}, { :id =>"comment_user_id", :selected =>"0"} %><br/>
    New User:
      <%= f.fields_for :users, @post.users.build do |users_fields| %>
      <%= users_fields.text_field :username %>
    <% end %>
    <%= comments_fields.text_field :content, id:"comment_content"%>
  <% end %>
  <%= f.submit "Create Comment" %>
<% end %>
